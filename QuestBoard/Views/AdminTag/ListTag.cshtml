@model List<QuestBoard.Models.Domain.Tag>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="py-2 mb-5" id="siteHeader">
    <div class="container">
        <h2>Show Tags</h2>
    </div>
</div>

<div class="container">
    @if(Model != null && Model.Any())
    {
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Display Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var tag in Model)
                {
                    <tr>
                        <td>@tag.Id</td>
                        <td>@tag.Name</td>
                        <td>@tag.DisplayName</td>
                        <td>
                            <a 
                                asp-area=""
                                asp-controller="AdminTag"
                                asp-action="Edit"
                                asp-route-id="@tag.Id">
                                Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Tags found</p>
    }
</div>