@model QuestBoard.Models.ViewModes.AddProjectRequest
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="py-2 mb-5" id="siteHeader">
    <div class="container">
        <h2>New Project</h2>
    </div>
</div>

<div class="container">
        <form method="post">
            <div class="mb-3 mt-3">
                <label class="form-label">Project Name</label>
                <input type="text" class="form-control bg-dark text-light" id="name" asp-for="Name" />
            </div>
            <div class="mb-3 mt-3">
                <label class="form-label">Description</label>
                <input type="text" class="form-control bg-dark text-light" id="description" asp-for="shortDescription" />
            </div>

            <div class="mb-3 mt-3">
                <label class="form-label">Add Crew</label>
                <input type="text" class="form-control bg-dark text-light" id="addCrew" />
            </div>

            <div class="mt-3">
                <button class="btn btn-success type="submit">Save</button>
            </div>
        </form>
  
</div>