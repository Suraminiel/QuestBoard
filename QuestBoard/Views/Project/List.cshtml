@model List<QuestBoard.Models.ViewModes.ProjectsOverview>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="py-2 mb-5" id="siteHeader">
    <div class="container">
        <h2>Your Projects</h2>
    </div>
</div>

<div class="container">
   @if(Model != null && Model.Any())
   {
        <table class="styled-table">
           <thead>
               <tr>
                   <th>Name</th>
                   <th>Description</th>
                   <th>Created</th>
                   <th>By</th>
               </tr>
           </thead>
           <tbody>
               @foreach(var project in Model)
               {
                   <tr>
                       <td>
                            <a class="custom-link"
                                asp-area=""
                               asp-controller="Project"
                               asp-action="Edit"
                               asp-route-id="@project.Id">
                                @project.Name
                            </a>
                           </td>
                       <td>@project.shortDescription</td>
                        <td>@DateTime.Now</td>
                        <td>Creator</td>
                   </tr>
               }
           </tbody>
       </table>

        <a class="btn me-3 mt-3 bg-success text-light "
           asp-area=""
           asp-controller="Project"
           asp-action="Add">
            Create new Project
        </a>
   }
   else
   {
       <p>no current projects</p>

        <a class="btn me-3 mt-3 bg-success text-light "
           asp-area=""
           asp-controller="Project"
           asp-action="Add">
            Create new Project
        </a>
   }
    
    
</div>